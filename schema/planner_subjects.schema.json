{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://planner-cli.local/schema/subjects.schema.json",
  "title": "Subjects",
  "type": "object",
  "required": ["schema_version", "subjects"],
  "properties": {
    "schema_version": {"type": "string"},
    "subjects": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["subject_id", "name", "cfu", "difficulty_coeff", "priority", "completion_initial", "attending", "exam_dates"],
        "properties": {
          "subject_id": {"type": "string", "minLength": 1},
          "name": {"type": "string", "minLength": 1},
          "cfu": {"type": "number", "exclusiveMinimum": 0},
          "difficulty_coeff": {"type": "number", "exclusiveMinimum": 0, "default": 1.0},
          "priority": {"type": "integer", "minimum": 1},
          "completion_initial": {"type": "number", "minimum": 0, "maximum": 1},
          "attending": {"type": "boolean"},
          "attendance_hours_per_cfu": {"type": "number", "minimum": 0},
          "exam_dates": {"type": "array", "minItems": 1, "items": {"type": "string", "format": "date"}},
          "selected_exam_date": {"type": "string", "format": "date"},
          "start_at": {"type": "string", "format": "date"},
          "end_by": {"type": "string", "format": "date"},
          "strategy_mode": {"type": "string", "enum": ["forward", "backward", "hybrid"]},
          "pomodoro_overrides": {"type": "object"},
          "overrides": {
            "type": "object",
            "propertyNames": {
              "enum": [
                "subject_buffer_percent",
                "critical_but_possible_threshold",
                "strategy_mode",
                "stability_vs_recovery",
                "start_at",
                "end_by",
                "max_subjects_per_day",
                "pomodoro_enabled",
                "pomodoro_work_minutes",
                "pomodoro_short_break_minutes",
                "pomodoro_long_break_minutes",
                "pomodoro_long_break_every",
                "pomodoro_count_breaks_in_capacity"
              ]
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
